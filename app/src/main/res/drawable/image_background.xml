<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="#FFFFFF" /> <!-- White background for the image -->
    <corners android:radius="8dp" /> <!-- Rounded corners for the background -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
    <stroke
        android:width="2dp"
        android:color="#DDDDDD" /> <!-- Subtle gray border -->
    <shadow
        android:shadowColor="#55000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4" /> <!-- Soft shadow for depth -->
</shape>
