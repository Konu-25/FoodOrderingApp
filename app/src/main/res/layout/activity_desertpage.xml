<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".desertpage">

    <!-- Cart Icon -->
    <ImageView
        android:id="@+id/cartIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        android:src="@drawable/cart"
        android:background="@drawable/cart_circle_background"
        android:contentDescription="Cart Icon"
        android:padding="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:elevation="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Title -->


    <!-- Scrollable Menu -->

    <TextView
        android:id="@+id/snacksTitle"
        android:layout_width="250dp"
        android:layout_height="37dp"
        android:layout_gravity="center"
        android:layout_marginTop="64dp"
        android:text="   AMMA'S PASTRIES"
        android:textColor="#FF4500"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cartIcon" />

    <ScrollView
        android:id="@+id/snacksScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/snacksTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:padding="16dp">


            <!-- Dish 1 -->
            <LinearLayout
                android:layout_width="373dp"
                android:layout_height="124dp"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/dish1Image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:contentDescription="Dish 1"
                    android:src="@drawable/chocolatelava" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:id="@+id/dish1Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chocolate Lava"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/dish1Price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Price: ₹150"
                        android:textColor="#777777"
                        android:textSize="14sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/addDish1Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FF4500"
                    android:text="Add"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- Dish 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/dish2Image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:contentDescription="Dish 2"
                    android:src="@drawable/valnillacake" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:id="@+id/dish2Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vannilla"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/dish2Price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Price: ₹120"
                        android:textColor="#777777"
                        android:textSize="14sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/addDish2Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FF4500"
                    android:text="Add"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- Dish 1 -->
            <LinearLayout
                android:layout_width="373dp"
                android:layout_height="124dp"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/dish3Image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:contentDescription="Dish 1"
                    android:src="@drawable/chocolatelava" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:id="@+id/dish3Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cup Cakes"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/dish3Price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Price: ₹150"
                        android:textColor="#777777"
                        android:textSize="14sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/addDish3Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FF4500"
                    android:text="Add"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- Dish 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="122dp"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/dish4Image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:contentDescription="Dish 2"
                    android:src="@drawable/valnillacake" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:id="@+id/dish4Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Donut "
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/dish4Price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Price: ₹120"
                        android:textColor="#777777"
                        android:textSize="14sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/addDish4Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FF4500"
                    android:text="Add"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>